{
  "extends": "airbnb-base",
  "plugins":["notice"],
  "parserOptions":{
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "node": true
  },
  "rules": {
    "global-require": 1,
    "import/no-dynamic-require": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": 1,
    "no-param-reassign": 1,
    "prefer-promise-reject-errors": 1,
    "import/no-unresolved": 0,
    "no-await-in-loop": 0,
    "new-cap": 0,
    "max-len": ["error", {
      "code": 250,
      "ignoreTemplateLiterals": true
    }],
    "linebreak-style": "off"
  }
}
